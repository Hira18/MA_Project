<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_guardienreg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bkk"
    tools:context="com.example.hamzza.smarillance.guardienreg">

    <RadioButton
        android:text="Female"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/radioButtonmaleg"
        android:layout_alignEnd="@+id/etnewuserpassg"
        android:layout_marginEnd="47dp"
        android:textColorHint="?android:attr/colorFocusedHighlight"
        android:textColor="?android:attr/colorFocusedHighlight"
        android:id="@+id/radioButtonfemaleg" />


    <Button
        android:text="Register"
        android:layout_width="match_parent"
        android:id="@+id/btnregisterg"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:textSize="15sp"
        android:textColor="@android:color/background_dark"
        android:background="@color/green"

        android:layout_height="30dp" />

    <EditText
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/idd"

        android:textColorHint="?android:attr/colorFocusedHighlight"
        android:textColor="?android:attr/colorFocusedHighlight"
        android:ems="10"
        android:id="@+id/etnewuseremailg"
        android:hint="Enter Email."

        android:layout_width="300dp"
        android:layout_marginBottom="80dp"
        android:layout_above="@+id/etnewuserpassg"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="select contacts via phone app."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="?android:attr/colorFocusedHighlight"
        android:textColor="?android:attr/colorFocusedHighlight"
        android:id="@+id/phoneapp"
        android:clickable="true"
        android:textSize="20dp"
        android:drawableLeft="@drawable/phonee"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/btnregisterg"
        android:layout_alignLeft="@+id/etnewuserageg"
        android:layout_alignStart="@+id/etnewuserageg" />

    <EditText
        android:layout_width="300dp"


        android:layout_height="40dp"
        android:drawableLeft="@drawable/pas"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etnewuserpassg"
        android:textColorHint="?android:attr/colorFocusedHighlight"
        android:textColor="?android:attr/colorFocusedHighlight"


        android:hint="Create Password."
        android:layout_marginBottom="81dp"
        android:layout_above="@+id/radioButtonmaleg"
        android:layout_alignLeft="@+id/etnewuseremailg"
        android:layout_alignStart="@+id/etnewuseremailg" />

    <RadioButton
        android:text="Male"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textColorHint="?android:attr/colorFocusedHighlight"
        android:textColor="?android:attr/colorFocusedHighlight"
        android:id="@+id/radioButtonmaleg"
        android:layout_marginBottom="47dp"
        android:layout_above="@+id/etnewuserageg"
        android:layout_alignLeft="@+id/etnewuserpassg"
        android:layout_alignStart="@+id/etnewuserpassg" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"

        android:drawableLeft="@drawable/mob"
        android:maxLength = "11"

        android:textColorHint="?android:attr/colorFocusedHighlight"
        android:textColor="?android:attr/colorFocusedHighlight"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etnewuserageg"

        android:hint="Enter Mobile No."
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/phoneapp"
        android:layout_alignLeft="@+id/radioButtonmaleg"
        android:layout_alignStart="@+id/radioButtonmaleg" />


</RelativeLayout>
